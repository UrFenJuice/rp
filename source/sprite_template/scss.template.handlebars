@mixin sprite($filename) {
    display: block;
    @media (min-width: 320px) {
      {{#sprites}}
      @if $filename == {{name}} {
        background-image: url({{{escaped_image}}});
        background-position: {{px.offset_x}} {{px.offset_y}};
        background-size: {{px.total_width}};
        width: {{px.width}};
        height: {{px.height}};
      }
      {{/sprites}}
    }
    @media (min-width: 2600px) {
      {{#sprites}}
      @if $filename == {{name}} {
        background-image: url(/assets/img/sprite2x.png);
        background-position-x: {{px.offset_x}} / 2px * 4px;
        background-position-y: {{px.offset_y}} / 2px * 4px;
        background-size: {{px.total_width}} / 2px * 4px;
        width: {{px.width}} / 2px * 4px;
        height: {{px.height}} / 2px * 4px;
      }
      {{/sprites}}
    }
}